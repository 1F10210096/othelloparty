datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  userOnRoom UserOnRoom[]
  roomId     String       @id
  board      Json
  status     String
  createdAt  DateTime
  turn       Int
  blackmen   String
  whitemen   String
  kansenn    String[]
  knum       Int
  blackname  String
  whitename  String
}

model UserOnRoom {
  firebaseId String
  in         DateTime
  out        DateTime
  roomId     String
  Room       Room     @relation(fields: [roomId], references: [roomId])

  @@id([firebaseId, roomId])
}
